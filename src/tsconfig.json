{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ],
        "exclude": [
            "server.ts",
            "test.ts",
            "**/*.spec.ts"
        ],
        "angularCompilerOptions": {
            "genDir": "./dist/ngfactory", // generated ngFactory files for the components and modules
            "entryModule": "./src/app/app.module#AppModule" // path to main bootstrapped module
        }
    }
}